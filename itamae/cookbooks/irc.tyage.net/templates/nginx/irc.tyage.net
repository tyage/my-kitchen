server {
  listen 443 ssl;
  server_name irc.tyage.net;

  ssl_certificate /etc/letsencrypt/live/irc.tyage.net/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/irc.tyage.net/privkey.pem;

  add_header Strict-Transport-Security "max-age=31536000;";

  access_log /var/log/nginx/irc.tyage.net.access.log;
  error_log /var/log/nginx/irc.tyage.net.error.log;

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass https://[::1]:<%= node[:znc][:port] %>/;
  }
}
